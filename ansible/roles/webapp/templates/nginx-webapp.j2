### TWS Configuration
################################################################################

upstream {{ tws_app_name }} {
{% for socket in tws_app_sockets %}
    server {{ socket }};
{% endfor %}
}

server {
    listen *:{{ tws_app_ports.nginx }};
    server_name _;

    access_log /var/log/nginx/{{ tws_app_name }}-access.log;
    error_log /var/log/nginx/{{ tws_app_name }}-error.log;

    location / {
        uwsgi_pass {{ tws_app_name }};
        include uwsgi_params;
    }
}