upstream devops-360-webapp {
    server 127.0.0.1:8080;
}

server {
    listen *:80;
    server_name _;

    access_log /var/log/nginx/devops-360-webapp-access.log;
    error_log /var/log/nginx/devops-360-webapp-error.log;

    location / {
        uwsgi_pass devops-360-webapp;
        include uwsgi_params;
    }

    location /static {
       alias {{ webapp_root }}/app/static;
       proxy_cache_key $host$uri$is_args$args;
       proxy_cache_valid 200 301 302 12h;
       expires 12h;
    }

}